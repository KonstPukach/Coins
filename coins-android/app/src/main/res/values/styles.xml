<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_view_content_error_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>
    </style>

        <style name="global_stats_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="global_stats_row_caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="global_stats_row_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="coin_details_row" parent="global_stats_row" />
    <style name="coin_details_row_caption" parent="global_stats_row_caption" />
    <style name="coin_details_row_value" parent="global_stats_row_value" />

    <style name="card_timestamp_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="tab_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pressed_bg_selector</item>
    </style>

    <style name="converter_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">16</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="real_time_price_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>